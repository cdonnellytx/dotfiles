{
  "files.associations": {
    "**/.bash*.d/**/*.conf": "shellscript",
    "**/*.omp.json": "jsonc",
    "**/.magic.d/**/*": "properties",
    "config": "properties",
    "*.toml.tmpl": "toml",
    ".chezmoiignore": "ignore",
    ".chezmoiignore.tmpl": "gotmpl",
    "*.cmd.tmpl": "bat"
