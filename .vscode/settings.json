{
  "files.associations": {
    "**/.bash*.d/**/*.conf": "shellscript",
    "**/*.omp.json": "jsonc",
    "**/.magic.d/**/*": "properties",
    "config": "properties",
    ".chezmoiignore": "ignore",

    "*.tmpl": "go-template",
    "*.cmd.tmpl": "bat",
    "*.json.tmpl": "jsonc",
    "*.ps1.tmpl": "powershell",
    "*.toml.tmpl": "toml",
    "**/dot_config/git/config.tmpl": "toml", // because gitconfig isn't an option
    "**/dot_config/git/**/*.conf.tmpl": "toml", // because gitconfig isn't an option
    "**/{chocolatey,NuGet}/**/*.config.tmpl": "xml"
  },

  "go-template.languages": [
    "bat",
    "json",
    "jsonc",
    "powershell",
    "toml",
    "yaml"
  ],
  "go-template.patterns": [
    "*.tmpl"
  ],

  "powershell.codeFormatting.preset": "Allman",
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",

  "powershell.scriptAnalysis.enable": true
}